<div class="container large text-center">
  <div class="card-footer header">
    <%= link_to 'Home', users_path %>
  </div>

  <h3 class="text-right logo">¤ SCOOTER SLEUTH ¤</h3>


  <h3 class="text-center">Scooters Near You:</h3>

  <ul class="scooter_list"><% @closest_scooters.limit(15).each do |scooter| %>
     <li>Brand: <%= scooter.company %>
     Location: <%= scooter.latitude %>
     <%= scooter.longitude %>
     Battery Level: <%= scooter.battery_level %></li>
     <% end %>
  </ul>

  <div class="footer">
    <div class="row">
      <div class="col-sm col1">
        Bird scooters near me: <%= @closest_scooters.count %></br>
        Average Bird battery level: <%= @closest_scooters.count %>
      </div>
      <div class="col-sm col2">
        Jump scooters near me: <%= @closest_scooters.count %></br>
        Average Jump battery level: <%= @closest_scooters.count %>
      </div>
      <div class="col-sm col3">
        Lime scooters near me: <%= @closest_scooters.count %></br>
        Average Lime battery level: <%= @closest_scooters.count %>
      </div>
    </div>
  </div>

</div>
